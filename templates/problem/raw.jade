doctype 5

html
    head
        link(rel='stylesheet', href='style.css')
        link(rel='stylesheet', href='pygment-github.css', type='text/css')
        meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
        style.
            html {
                background: white;
            }

            body {
                overflow: hidden;
                page-break-after: always;
                background: white;
            }

            tr {
                page-break-inside: avoid;
            }

            #info-table {
                width: auto;
                background: white;
            }

            #info-table td {
                text-align: left;
            }

            #info-table td.value {
                min-width: 10em;
            }

            #info-table td.key {
                font-weight: bold;
            }
