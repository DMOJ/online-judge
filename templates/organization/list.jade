extends base
- load cache
- load staticfiles
- load i18n

block js_media
    script(src='{% static "libs/tablesorter.js" %}', type='text/javascript')
    script(type='text/javascript').
        $(document).ready(function () {
            $("#organization-table").tablesorter();
        });

block title_ruler

block title_row
    - var tab = 'organizations'
    - var title = 'Organizations'
    include user/user-list-tabs

block body
    br
    table.table#organization-table
        thead: tr
            th {% trans "ID" %}
            th(style='width:85%') {% trans "Name" %}
            th {% trans "Members" %}
        tbody: each org in organizations
            tr
                td= org.key
                td: a(href='{% url "organization_home" org.key %}')= org.name
                td
                    - cache 86400 org_member_count org.id
                        a(href='{% url "organization_users" org.key %}')= org.member_count
