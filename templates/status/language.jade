extends base

- load staticfiles
- load cache
- load markdown_trois_tags
- load i18n

block js_media
    script(src='{% static "libs/tablesorter.js" %}', type='text/javascript')
    script(type='text/javascript').
        $(document).ready(function () {
            var table = $("#judge-status");
            table.tablesorter();
            setInterval(function () {
                $.ajax({
                    url: '{% url "runtime_judge_ajax" language.key %}'
                }).done(function (data) {
                    table.html(data);
                });
            }, 10000);
        });

block header
    if perms.judge.change_language
        .title-line-action [#[a(href='{% url "admin:judge_language_change" language.id %}') {% trans "Edit" %}]]

block body
    ul
        li
            b {% trans "Short name:" %}
            = ' '
            = language.short_display_name
        li
            b {% trans "Category:" %}
            = ' '
            = language.common_name
        li
            b {% trans "Basic Runtime Info:" %}
            = ' '
            = language.info
    if language.description
        .content-description
            - cache 86400 language_html language.id
                | #{language.description|markdown:"language"}

    h3 Judges
    hr
    table#judge-status.table
        include status/judge-status-table
