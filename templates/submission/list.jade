            include problem/statistics_table

    if page_obj.num_pages > 1
        div(style='margin-bottom:10px;')
            include list_pages

    table#submissions-table.table
        colgroup
            col.sub-result
            col.sub-info
            col.sub-testcase
            col.sub-prop
            col.sub-usage
