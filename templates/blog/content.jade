extends base
- load staticfiles
- load cache
- load markdown_trois_tags
- load social_share

block js_media
    include comments/js_media

block media
    include comments/media
block body
    div.post-full
        div.time #{post.publish_on|date:"N j, o, G:i"}
        div.body
            - cache 86400 post_content post.id
                | #{post.content|markdown:"blog"}
    hr
    span.social
       - post_to_gplus post "<i class=\"fa fa-google-plus-square\"></i>"
       - post_to_facebook post "<i class=\"fa fa-facebook-official\"></i>"
       - post_to_twitter "DMOJ:" post "<i class=\"fa fa-twitter\"></i>"
    .comment-area
        h2 Comments
        include comments/list
