extends base

block title
    | Newsletter list - #{SITE_LONG_NAME}

block content_title
    | Newsletter list

block body
    if user.is_authenticated
        form.form-area(method='POST', action='')
            - csrf_token
            | {{ formset.management_form }}
            table
                tr
                    th Newsletter
                    th Subscribe
                each form in formset.forms
                    tr
                        td {{ form.id }}{{ form.newsletter }}
                            a(href='{% url "newsletter_archive" form.instance.newsletter.slug %}')
                                = form.instance.newsletter.title
                        td #{form.subscribed}
            hr
            p
                input#id_submit(name='submit', value='Update subscriptions', type='submit', style='float: right')
    else
        table.form-area
            tr
                th Newsletter
            each newsletter in object_list
                tr
                    td
                        a(href='{% url "newsletter_detail" newsletter.slug %}')= newsletter.title
