- load i18n

.page-title: .tabs
    h2(style='color:#393630; display: inline-block') {% trans title %}
    span.spacer
    if tab == 'calendar'
        div(style='font-size: 1.6em; margin-top: 0.3em')
            if prev_month
                a(href='{% url "contest_calendar" prev_month.year prev_month.month %}') &laquo; {% trans "Prev" %}
            = ' '
            if next_month
                a(href='{% url "contest_calendar" next_month.year next_month.month %}') {% trans "Next" %} &raquo;
        span.spacer
    ul
        li.tab(class=('active' if tab == 'list' else '')): a(href='{% url "contest_list" %}') #[i.tab-icon.fa.fa-list] {% trans "List" %}
        li.tab(class=('active' if tab == 'calendar' else '')): a(href='{% url "contest_calendar" now.year now.month %}') #[i.tab-icon.fa.fa-calendar] {% trans "Calendar" %}
        if perms.judge.change_contest
            li.tab: a(href='{% url "admin:judge_contest_changelist" %}') #[i.tab-icon.fa.fa-edit] {% trans "Admin" %}
