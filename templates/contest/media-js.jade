-load i18n

script(type='text/javascript').
    $(function () {
        $('.leaving-forever').click(function () {
            return confirm('{% trans "Are you sure you want to leave?" %}\n' +
                    '{% trans "You cannot come back to a virtual participation. You will have to start a new one." %}');
        });

        $('.first-join').click(function () {
            return confirm('{% trans "Are you sure you want to join?" %}\n' +
                    '{% trans "Joining a contest starts your timer, after which it becomes unstoppable." %}');
        });
    });