extends base
- load staticfiles
- load timedelta
- load tz

block meta
    meta(name='description', content="The {{ SITE_NAME }}'s contest list - past, present, and future.")

block js_media
    script(type='text/javascript').
        $(document).ready(function () {
            $('.time-remaining').each(function () {
                count_down($(this));
            });
        });

block header
    div(style='float: right; margin-top: 0.9em; font-size: 1.3em;')
        a(href='{% url "contest_calendar" now.year now.month %}') Calendar view

block body
    if current_contests
        br
        h3 Ongoing Contests
        br
        table.contest-list.table.striped
            thead
                tr
                    th(style='width:90%') Contest
                    th Rankings
                    if not IN_CONTEST
                        th(style='width:15%')
            tbody
                each contest in current_contests
                    tr
                        td
                            div(style='position:relative')
                                a(href='{% url "contest_view" contest.key %}')= contest.name
                                if contest.start_time
                                    br
                                    if contest.time_before_end
                                        span.time Ending in&nbsp;
                                        span.time.time-remaining #{contest.time_before_end|timedelta:"simple"}
                                    elif contest.free_start and contest.start_time
                                        span.time Started at #{contest.start_time|date:"N j, o, G:i"}
                                    .time.floating-time(style='text-align:right')
                                        span(style='text-align:right;color:#777;')
                                        if contest.time_limit
                                            | #{contest.start_time|date:"M j, Y, G:i"} - #{contest.end_time|date:"M j, Y, G:i"}
                                        else
                                            | #{contest.start_time|date:"M j, Y, G:i"}
                                        br
                                        if contest.time_limit
                                            | #{contest.time_limit|timedelta:"simple-no-seconds"} window
                                        else
                                            | #{contest.contest_window_length|timedelta:"simple-no-seconds"} long
                                    if contest.is_external
                                        .external-notice
                                            a(href='/about#external-contests') External contest
                                
                        td
                            a(href='{% url "contest_ranking" contest.key %}') x#{contest.participation_count}
                        if not IN_CONTEST
                            td
                                a.unselectable.button.full(href='{% url "contest_join" contest.key %}', style='display:inline;padding-left:30%;padding-right:30%') Join
        br
        .dashed
        
    br
    h3 Upcoming Contests
    br
    if future_contests
        table.contest-list.table.striped
            thead
                tr
                    th Contest
            tbody
                each contest in future_contests
                    tr
                        td
                            div(style='position:relative')
                                a(href='{% url "contest_view" contest.key %}')= contest.name
                                if contest.start_time
                                    br
                                    if contest.time_before_start
                                        span.time Starting in&nbsp;
                                        span.time.time-remaining #{contest.time_before_start|timedelta:"simple"}
                                    
                                    .time.floating-time(style='text-align:right')
                                        span(style='text-align:right;color:#777;')
                                        if contest.time_limit
                                            | #{contest.start_time|date:"M j, Y, G:i"} - #{contest.end_time|date:"M j, Y, G:i"}
                                        else
                                            | #{contest.start_time|date:"M j, Y, G:i"}
                                        br
                                        if contest.time_limit
                                            | #{contest.time_limit|timedelta:"simple-no-seconds"} window
                                        else
                                            | #{contest.contest_window_length|timedelta:"simple-no-seconds"} long
                                    if contest.is_external
                                        .external-notice
                                            a(href='/about#external-contests') External contest
    else
        i There are no scheduled contests at this time.



    br
    hr.dashed
    br
    h3 Past Contests
    br
    table.contest-list.table.striped
        thead
            tr
                th(style='width:95%') Contest
                th Rankings
        tbody
            each contest in past_contests
                tr
                    td
                        div(style='position:relative')
                            a(href='{% url "contest_view" contest.key %}')= contest.name
                            if contest.is_external
                                .external-notice
                                    a(href='/about#external-contests') External contest
                            span.floating-time-right(style='text-align:right;color:#777;')
                                if contest.time_limit
                                    | #{contest.start_time|date:"M j, Y, G:i"} - #{contest.end_time|date:"M j, Y, G:i"}
                                else
                                    | #{contest.start_time|date:"M j, Y, G:i"}
                                br
                                if contest.time_limit
                                    | #{contest.time_limit|timedelta:"simple-no-seconds"} window
                                else
                                    | #{contest.contest_window_length|timedelta:"simple-no-seconds"} long
                    td
                        a(href='{% url "contest_ranking" contest.key %}') x#{contest.participation_count}
