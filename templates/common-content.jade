extends base
- load staticfiles
- load compress

block media
    block content_media

block js_media
    - compress js
        script(src='{% static "zerocopy/ZeroClipboard.js" %}')
        script(type='text/javascript').
            $(function () {
                var info_float = $('.info-float');
                var container = $('#content-right');
                if (window.bad_browser) {
                    container.css('float', 'right');
                } else if (!featureTest('position', 'sticky')) {
                    fix_div(info_float, 55);
                    $(window).resize(function () {
                        info_float.width(container.width());
                    });
                    info_float.width(container.width());
                }

                ZeroClipboard.config({swfPath: '{% static "zerocopy/ZeroClipboard.swf" %}'});
                var copyButton;
                $('pre code').each(function () {
                    $(this).parent().before($('<div/>', {'class': 'zero-clipboard'})
                            .append(copyButton = $('<span/>', {
                                'class': 'btn-clipboard',
                                'data-clipboard-text': $(this).text()
                            }).text('Copy')));
                    new ZeroClipboard(copyButton.get(0));
                });
            });
    block content_js_media

block body
    #common-content
        #content-right
            .info-float
                block info_float
        #content-left
            .content-description.screen
                block description
                hr
            block comments
block bodyend
    include mathjax_load
