extends base
- load markdown
- load staticfiles
- load reference

block title
    | #{flatpage.title} - #{SITE_LONG_NAME}
    - var title = flatpage.title

block content_title
    | #{flatpage.title}

block header
    include flatpages/admin_link

block body
    .content-description
        | #{flatpage.content|with_math:MATH_ENGINE|markdown:"solution"|reference}

block bodyend
    if REQUIRE_JAX
        include mathjax-load
