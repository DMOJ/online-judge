extends base
- load markdown_trois_tags
- load staticfiles
- load smart_math
- load latex_math
- load i18n
- load reference

block js_media
    include comments/js_media

block media
    include comments/media

block site_title
    span(style='color: #FFDE05') DM::
    span(style='color: #AAA') Solutions

block title
    | #{solution.title} - #{SITE_LONG_NAME}

block content_title
    | #{solution.title}
    div(style='float:right')
        if solution.problem
            | [#[a(href='{% url "problem_detail" solution.problem.code %}') {% trans "Problem" %}]]
        if perms.judge.change_solution
            | [#[a(href='{% url "admin:judge_solution_change" solution.id %}') {% trans "Edit" %}]]

block body
    .content-description
        | #{solution.content|markdown:"solution"|reference|latex_math|smart_math:MATH_ENGINE}

    include comments/list

block bodyend
    if REQUIRE_JAX
        include mathjax_load
    include comments/math
