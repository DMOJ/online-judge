extends base
- load cache
- load markdown_trois_tags

block media
    style.
        .table td.language {
          white-space: nowrap;
        }
        .table td.info .content-description {
          margin-top: -1em;
          margin-bottom: -1em;
        }
        
        .table td {
          text-align: left;
        }

block body
    table.table
        thead
            tr
                th {% trans "ID" %}
                th {% trans "Name" %}
                th {% trans "Runtime Info" %}
        tbody
            each language in languages
                tr
                    td= language.short_display_name
                    td.language
                        a(href='{% url "runtime_info" language.key %}')= language.name
                    td.info
                        if language.description
                            .content-description
                                - cache 86400 language_html language.id
                                    | #{language.description|markdown:"language"}
                        else
                            .content-description
                                p
                                    code= language.info
